{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "region": ""
  },
  "builders": [{
    "name": "Ubuntu Build",
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `region`}}",
    "source_ami": "ami-0a313d6098716f372",
    "instance_type": "t2.small",
    "ssh_username": "ubuntu",
    "ami_name": "app-docker-{{timestamp}}",
    "run_tags": {
      "Name": "jenkins-packer-runner",
      "OS_Version": "Ubuntu",
      "Release": "Latest",
      "Runner": "Packer"
    },
    "tags": {
      "Name": "app-docker-{{timestamp}}",
      "OS_Version": "Ubuntu",
      "Release": "Latest",
      "Runner": "EC2"
    }
  }],
  "provisioners": [{
    "type": "shell",
    "inline": ["sudo apt-get update", "curl -sL https://deb.nodesource.com/setup_10.x | sudo -E bash -", "sudo apt-get install -y nodejs"]
  }, {
    "type": "shell",
    "inline": ["sudo apt-get install -y build-essential"]
  }, {
    "type": "shell",
    "inline": ["mkdir /tmp/app"]
  }, {
    "type": "file",
    "source": "{{pwd}}/app/",
    "destination": "/tmp/app"
  }, {
    "type": "shell",
    "inline": [
      "cd /tmp/app/",
      "sudo npm install",
      "sudo npm install pm2 -g",
      "sudo pm2 start index.js"
    ]
  }]
}